<h1> Transactions for <%= user.username %> </h1>
<p>Here is your list of things to do!</p>
<ul>
  <li>
    <a href="/transactions">transaction table</a>
  </li>
</ul>
<div class="card mt-3">
  <div class="card-body">
    <% if (transactionByCategory && transactionByCategory.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Category</th>
            <th>Amount</th>
          </tr>
          <tbody>
            <% for (const d of transactionByCategory) { %>
              <tr>
                <td><%= d._id %></td>
                <td><%= d.amount %></td>
              </tr>
            <% } %>
          </tbody>
        </thead>
      </table>
    <% } else { %>
      <div class="alert alert-warning">
        No statistic records
      </div>
    <% } %>
  </div>
</div>
